@model WeekendTaskLanguage.Models.HomeViewModel

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Partial.cshtml";
}
    <div class="site-blocks-cover overlay" style="background-image: url(/Public/images/13.jpg)" data-aos="fade" data-stellar-background-ratio="0.5">
        <div class="container">
            <div class="row align-items-center justify-content-center text-center">
                <div class="col-md-12" data-aos="fade-up" data-aos-delay="400">
                    <div class="row justify-content-center mb-4">
                        <div class="col-md-8 text-center">
                            <h1>We Are Expert in <span class="typed-words"></span></h1>
                            <p class="lead mb-5">We Make Beautiful Things</p>
                            <div><a href="#" class="btn btn-primary btn-md">Hire Us</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="section ft-feature-1">
        <div class="container">
            <div class="row align-items-stretch">
                <div class="col-12 bg-black w-100 ft-feature-1-content">
                    <div class="row align-items-center">
                        <div class="col-lg-5">
                            <div class="h-100">
                                <div class="mb-5 d-flex align-items-center">
                                    <div>
                                        <a href="https://vimeo.com/317571768" class="popup-vimeo d-block play"><span class="icon-play"></span></a>
                                    </div>
                                    <h2>Welcome To Chimper An Awward Winning Web Agency</h2>
                                </div>
                                <img src="~/Public/images/about_1.jpg" alt="Image" class="img-feature img-fluid">
                            </div>
                        </div>
                        @foreach (var spec in Model.Speciality.Take(2))
                        {
                            <div class="col-lg-3 ml-auto">
                                <div class="mb-5">
                                    <h3 class="d-flex align-items-center"><span class="icon icon-@spec.Icon mr-2"></span><span>@spec.Title</span></h3>
                                    <p>@spec.Text</p>
                                    <p><a href="#">Read More</a></p>
                                </div>
                                <div>
                                    <h3 class="d-flex align-items-center"><span class="icon icon-@spec.Icon mr-2"></span><span>@spec.Title</span></h3>
                                    <p>@spec.Text</p>
                                    <p><a href="#">Read More</a></p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="site-section">
        <div class="container">
            <div class="row">
                @foreach (var ab in Model.Ability)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="p-3 box-with-humber">
                            <div class="number-behind">@ab.Number</div>
                            <h2>@ab.Title</h2>
                            <p>@ab.Text</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <section class="site-section">
        <div class="container">
            <div class="row mb-5 justify-content-center">
                <div class="col-md-8 text-center">
                    <h2 class="text-black h1 site-section-heading text-center">Featured Projects</h2>
                    <p class="lead">@Model.Setting.Feature</p>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                @foreach (var img in Model.HomeImage)
                {
                <div class="col-md-6 col-lg-4">
                    <a href="#" class="media-1">
                        <img src="~/Public/images/@img.Image" alt="@img.Title" class="img-fluid">
                        <div class="media-1-content">
                            <h2>@img.Title</h2>
                            <span class="category">@img.Text</span>
                        </div>
                    </a>
                </div>
                }
                <div class="col-12 text-center mt-5">
                    <a href="@Url.Action("Index", "Work")" class="btn btn-primary btn-md">Show All Works</a>
                </div>
            </div>
        </div>
    </section>
    <section class="site-section testimonial-wrap">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 text-center">
                    <h2 class="text-black h1 site-section-heading text-center">Testimonials</h2>
                </div>
            </div>
        </div>
        <div class="slide-one-item home-slider owl-carousel">
            @foreach (var test in Model.Testimonial)
            {
                <div>
                    <div class="testimonial">
                        <blockquote class="mb-5">
                            <p>&ldquo;@test.Text&rdquo;</p>
                        </blockquote>
                        <figure class="mb-4 d-flex align-items-center justify-content-center">
                            <div><img src="~/Public/images/@test.Image" alt="Image" class="w-50 img-fluid mb-3"></div>
                            <p>@test.Name</p>
                        </figure>
                    </div>
                </div>
            }
        </div>
    </section>
    <section class="site-section bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 text-center">
                    <h2 class="text-black h1 site-section-heading text-center">Blog</h2>
                </div>
            </div>
            <div class="row">
                @foreach (var blog in Model.Blog)
                {
                    <div class="col-md-6 col-lg-4 mb-4 mb-lg-4">
                        <div class="h-entry">
                            <img src="~/Public/images/@blog.Image" alt="@blog.Name" class="img-fluid">
                            <h2 class="font-size-regular"><a href="#">@blog.Title1 @blog.Title2</a></h2>
                            <div class="meta mb-4">@blog.Name<span class="mx-2">&bullet;</span>@blog.DataTime<span class="mx-2">&bullet;</span> <a href="#">@blog.News</a></div>
                            <p>@blog.Text</p>
                            <p><a href="#">@blog.Reading</a></p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <a href="#" class="bg-primary py-5 d-block">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md10"><h2 class="text-white">Hire Us & @Model.Setting.Hire</h2></div>
            </div>
        </div>
    </a>
