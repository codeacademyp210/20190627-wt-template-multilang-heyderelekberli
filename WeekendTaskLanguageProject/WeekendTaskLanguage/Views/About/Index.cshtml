@model WeekendTaskLanguage.Models.HomeViewModel

@{
    ViewBag.Title = "Index";
}
    <div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/Public/images/hero_1.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
        <div class="container">
            <div class="row align-items-center justify-content-center text-center">
                <div class="col-md-12" data-aos="fade-up" data-aos-delay="400">
                    <div class="row justify-content-center mb-4">
                        <div class="col-md-8 text-center">
                            <h1>About Us</h1>
                            <p class="lead mb-5">We Make Beautiful Things</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="site-section">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md-5 ml-auto mb-5 order-md-2" data-aos="fade">
                    <img src="~/Public/images/hero_1.jpg" alt="Image" class="img-fluid rounded">
                </div>
                <div class="col-md-6 order-md-1" data-aos="fade">
                    <div class="row">
                        <div class="col-12 mb-4">
                            <div class="text-left pb-1 border-primary mb-4">
                                <h2 class="text-primary">Our Specialties</h2>
                            </div>
                        </div>
                        @foreach (var about in Model.AboutSpec)
                        {
                            <div class="col-md-12 mb-md-5 mb-0 col-lg-6">
                                <div class="unit-4">
                                    <div class="unit-4-icon mr-4 mb-3"><span class="text-secondary icon-@about.Icon"></span></div>
                                    <div>
                                        <h3>@about.Title</h3>
                                        <p>@about.Text</p>
                                        <p class="mb-0"><a href="#">Learn More</a></p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="site-section border-bottom">
        <div class="container">
            <div class="row justify-content-center mb-5">
                <div class="col-md-7 text-center border-primary">
                    <h2 class="font-weight-light text-primary" data-aos="fade">Our Team</h2>
                </div>
            </div>
            <div class="row">
                @foreach (var team in Model.Team)
                {
                    <div class="col-md-6 col-lg-4 mb-5 mb-lg-0" data-aos="fade" data-aos-delay="100">
                        <div class="person">
                            <img src="~/Public/images/@team.Image" alt="@team.Name" class="img-fluid rounded-circle w-50 mb-5">
                            <h3>@team.Name</h3>
                            <p class="position text-muted">@team.Position</p>
                            <p class="mb-4">@team.Text</p>
                            <ul class="ul-social-circle">
                                <li><a href="#"><span class="icon-@Model.Setting.FacebookIcon"></span></a></li>
                                <li><a href="#"><span class="icon-@Model.Setting.TwitterIcon"></span></a></li>
                                <li><a href="#"><span class="icon-@Model.Setting.InstagramIcon"></span></a></li>
                                <li><a href="#"><span class="icon-@Model.Setting.LinkedinIcon"></span></a></li>
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <section class="site-section testimonial-wrap">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 text-center">
                    <h2 class="text-black h1 site-section-heading text-center">Testimonials</h2>
                </div>
            </div>
        </div>
        <div class="slide-one-item home-slider owl-carousel">
            @foreach (var test in Model.Testimonial)
            {
                <div>
                    <div class="testimonial">
                        <blockquote class="mb-5">
                            <p>&ldquo;@test.Text&rdquo;</p>
                        </blockquote>
                        <figure class="mb-4 d-flex align-items-center justify-content-center">
                            <div><img src="~/Public/images/@test.Image" alt="@test.Name" class="w-50 img-fluid mb-3"></div>
                            <p>@test.Name</p>
                        </figure>
                    </div>
                </div>
            }
        </div>
    </section>
    <a href="#" class="bg-primary py-5 d-block">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md10"><h2 class="text-white">Hire Us & @Model.Setting.Hire</h2></div>
            </div>
        </div>
    </a>

